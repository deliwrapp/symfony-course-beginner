{% extends 'layout/base_admin.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>
                    {% if post.author is defined and post.author is not null %}
                        {{ post.author.email }}
                    {% else %}
                        no data
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{{ post.published ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ModifiedAt</th>
                <td>{{ post.modifiedAt ? post.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_post_index') }}">back to posts list</a>

    <a href="{{ path('app_admin_post_edit', {'id': post.id}) }}">edit</a>

    {{ include('admin/post/_delete_form.html.twig') }}
{% endblock %}
